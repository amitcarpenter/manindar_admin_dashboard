    <script>
      $(function () {
        var t = $("#tb1").DataTable({
          responsive: true,
          autoWidth: false,
          stateSave: true,
        });
        t.on("order.dt search.dt", function () {
          t.column(0, { search: "applied", order: "applied" })
            .nodes()
            .each(function (cell, i) {
              cell.innerHTML = i + 1;
            });
        }).draw();
      });
    </script>
