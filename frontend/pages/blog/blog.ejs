    <script>
      $(document).ready(function () {
        // Fetch data from the API
        $.get(
          "https://backend.artechworld.tech/api/admin/blog/all-blog-posts",
          function (data) {
            console.log(data);
            if (data.data && data.data.length > 0) {
              data.data.forEach(function (post, index) {
                const createdAt = new Date(post.created_at);
                const formattedDate = `${createdAt.getDate()} ${getMonthName(
                  createdAt.getMonth()
                )} ${createdAt.getFullYear()}`;
                $("#blogPostsBody").append(`
                        <tr>
                            <td>${index + 1}</td>
                            <td>${post.title}</td>
                            <td>${post.author}</td>
                            <td><img src="https://backend.artechworld.tech/uploads/blogs/tImages/${
                              post.mainImage
                            }" width="200px" class="img-thumbnail"/></td>
                            <td>${formattedDate}</td>
                            <td>
                              <a href="#" onclick="deletePost('${
                                post._id
                              }'); return false;"><i class="fa fa-trash"></i></a>
                                <a href="https://backend.artechworld.tech/api/blog/${
                                  post._id
                                }"><i class="fa fa-edit ml-4"></i></a>
                            </td>
                        </tr>
                    `);
              });
            } else {
              console.log("No data found");
            }
          }
        );
      });

      function getMonthName(monthIndex) {
        const months = [
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
          "November",
          "December",
        ];
        return months[monthIndex];
      }

      function deletePost(postId) {
        if (confirm("Are you sure you want to delete this post?")) {
          $.ajax({
            url: `https://backend.artechworld.tech/api/admin/blog/delete/${postId}`,
            type: "DELETE",
            success: function (result) {
              alert("Post deleted successfully.");
            },
            error: function (xhr, ajaxOptions, thrownError) {
              alert("Error deleting post.");
            },
          });
        }
      }
    </script>
